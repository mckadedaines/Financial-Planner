rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow access to users collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Base moneyTracker collection
    match /moneyTracker/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow access to purchases subcollection
      match /purchases/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Allow access to settings subcollection
      match /settings/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Allow access to income subcollection
      match /income/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Allow access to budgets subcollection
      match /budgets/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
} 